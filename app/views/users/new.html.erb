<h1>Signup</h1>

<%= render partial: 'errors', locals: { object: @user } %>

<%= form_for @user, url: users_path do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
